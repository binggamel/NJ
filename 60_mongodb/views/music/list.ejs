<!DOCTYPE html>
<html lang="en">
  <%- include("../header"); %>
  <body>
    <%- include("../menu"); %>
    <button
      type="button"
      class="btn aqua-gradient"
      onclick="location.href='/api/music/new'"
      style="border-radius: 45px;"
    >
      Create
    </button>

    <div class="row row-cols-1 row-cols-md-4">
      <%result.forEach(music => { %>
      <div class="col mb-4">
        <!-- Card -->
        <div class="card">
          <!-- Card image -->
          <div class="view overlay">
            <img
              class="card-img-top"
              src="https://mdbootstrap.com/img/Mockups/Lightbox/Thumbnail/img%20(67).jpg"
              alt="Card image cap"
            />
            <a href="#!">
              <div class="mask rgba-white-slight"></div>
            </a>
          </div>

          <!-- Card content -->
          <div class="card-body">
            <!-- Title -->
            <h4 class="card-title"><%= music.singer %></h4>
            <!-- Text -->
            <p class="card-text">
              <%= music.title %>
            </p>
            <!-- Button -->
            <a
              href="/api/music/<%= music._id %>"
              class="btn btn-outline-info waves-effect"
              style="border-radius: 10px;"
              >More..</a
            >
          </div>
        </div>
      </div>
      <!-- Card -->

      <% }) %>
    </div>
    <%-include("../footer");%>
  </body>
</html>
